#! /usr/bin/env bash

set -e
set -o pipefail
set -u
#set -f

readonly PROGNAME=$(basename $0)
readonly PROGDIR=$(dirname $0)
readonly -a ARGS=("$@")
readonly NARGS="$#"

if [[ $NARGS -ne 2 ]]; then
	echo "usage: $PROGNAME doc1.docx doc2.docx"
	exit 1
fi

diff --color=always <(pandoc -t markdown "$1") <(pandoc -t markdown "$2") | less -R

