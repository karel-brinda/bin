#! /usr/bin/env bash

set -o verbose

readonly PROGNAME=$(basename $0)
readonly PROGDIR=$(dirname $0)
readonly -a ARGS=("$@")
readonly NARGS="$#"

x="mamba install -y"


$x \
	snakemake \
	pandas xopen numpy ete3 markdown biopython \
	jupyterlab bash_kernel \
	pylint yapf \
	sra-tools \
	samtools seqtk \
	bwa bowtie2 minimap2 blast \
	ococo prophasm prophex \
	mccortex bcalm \
	mashtree

exit 0


